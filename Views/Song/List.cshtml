@model List<Stotify.Models.Song>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Songs</h2>

@using (Html.BeginForm("List", "Song", FormMethod.Get))
{
    @Html.TextBox("search")
    <input type="submit" value="Search" />
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Artist</th>
            <th scope="col">Song</th>
            <th scope="col">Song Release</th>
            <th scope="col">Operation</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td>No Match</td>
            </tr>
        }
        else
        {
            foreach (var song in @Model)
            {
                <tr>
                    <td>@song.ArtistName</td>
                    <td><a href="Show/@song.SongID">@song.SongName</a></td>
                    <td>@song.SongYear</td>
                    <td><a href="Edit/@song.SongID">Update </a>, <a href="Delete/@song.SongID"> Delete</a></td>
                </tr>
            }
        }

    </tbody>
</table>

<button type="button" class="btn btn-light">@Html.ActionLink("Add Song", "New")</button>