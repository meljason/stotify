@model Stotify.Models.Song
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Song</h2>

@using (Html.BeginForm("Create", "Song"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.ArtistName)
        @Html.TextBoxFor(m => m.ArtistName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.SongName)
        @Html.TextBoxFor(m => m.SongName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.SongYear)
        @Html.DropDownList("Release Year", Enumerable.Range(1950, (DateTime.Now.Year - 1950) + 1).Reverse().Select(m => new SelectListItem { Value = m.ToString(), Text = m.ToString() }), "Song Release")
    </div>

    <div class="form-group">
        <label>Upload cover image</label>
        @Html.TextBox("file", "", new { type = "file" })
    </div>

    <div class="form-group">
        <label for="coverImage">Import Cover Image</label>
        <input type="file" class="form-control-file" id="coverImage" aria-describedby="fileHelp">
    </div>

    <button type="submit" style="text-decoration:none; color:white; font-weight:bold;" class="btn submit-btn">Add Song</button>
}