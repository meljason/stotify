@model List<Stotify.Models.Playlist>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Playlists</h2>

@using (Html.BeginForm("List", "Playlist", FormMethod.Get))
{
    @Html.TextBox("search", null, new { @class = "form-control mr-sm-2 d-inline search-field", @placeholder = "Press enter to Search!" })
}
<table class="table mt-3">
    <thead>
        <tr>
            <th scope="col">Playlist Name</th>
            <th scope="col">Song</th>
            <th scope="col">Operation</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td>No Match</td>
            </tr>
        }
        else
        {
            foreach (var playlist in @Model)
            {
                <tr>
                    <td><a href="Show/@playlist.PlaylistID" style="text-decoration: none; color: white; font-weight: bold;">@playlist.PlaylistName</a></td>
                    <td><a href="PlaylistSong/@playlist.PlaylistID" style="text-decoration: none; color: grey;">View Songs</a></td>
                    <td><a href="Edit/@playlist.PlaylistID">Update </a>, <a href="#"> Delete</a></td>
                </tr>
            }
        }

    </tbody>
</table>

<button type="button" class="btn submit-btn">@Html.ActionLink("Add Playlist", "New", null, new { style = "text-decoration:none; color:white; font-weight:bold;" })</button>


