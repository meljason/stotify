@using Stotify.Models
@model Stotify.ViewModels.ListenerFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Listener</h2>

@using (Html.BeginForm("Create", "Listener"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.listener.ListenerFname)
        @Html.TextBoxFor(m => m.listener.ListenerFname, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.listener.ListenerLname)
        @Html.TextBoxFor(m => m.listener.ListenerLname, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.listener.ListenerEmail)
        @Html.TextBoxFor(m => m.listener.ListenerEmail, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m=>m.listener.ListenerGender)
        @Html.RadioButton("Gender", "Male") Male
        @Html.RadioButton("Gender", "Female") Female
    </div>
    //Dropdown attempt
    @*<div class="form-group">
            @Html.LabelFor(m => m.listener.Playlists)
            @Html.DropDownListFor(m => m.listener.Playlists, new SelectList(Model.Playlists, "PlaylistID", "PlaylistName"), "Select Playlist", new { @class = "form-control" })
        </div>*@

    <div class="form-group">
        <label>Playlist that you like</label>
        @foreach (Playlist playlist in Model.Playlists)
        {
            <div class="form-check">
                <input type="checkbox" class="form-check-input" name="playlists" value="@playlist.PlaylistName" id="playlists" />
                <label class="form-check-label" for="@playlist.PlaylistName">@playlist.PlaylistName</label>
            </div>
        }
    </div>
    @Html.HiddenFor(m=>m.listener.ListenerID)
    <button type="submit" class="btn btn-light">Add Listener</button>
}

