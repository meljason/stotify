@model List<Stotify.Models.Listener>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Listeners</h2>

@using (Html.BeginForm("List", "Listener", FormMethod.Get))
{
    @Html.TextBox("search")
    <input type="submit" value="Search" />
}


<table class="table">
    <thead>
    <tr>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Email</th>
        <th scope="col">Gender</th>
        <th scope="col">Playlists</th>
        <th scope="col">Operation</th>
    </tr>
    </thead>
    <tbody>
    @if (Model.Count() == 0)
    {
        <tr>
            <td>No Match</td>
        </tr>
    }
    else
    {
        foreach (var listener in @Model)
        {
            <tr>
                <td><a href="/Listener/Show/@listener.ListenerID">@listener.ListenerFname</a></td>
                <td>@listener.ListenerLname</td>
                <td>@listener.ListenerEmail</td>
                <td>@listener.ListenerGender</td>
                <td><a href="/Listener/ListenerPlaylist/@listener.ListenerID">View Playlists</a></td>
                <td><a href="/Listener/Edit/@listener.ListenerID">Update </a>, <a href="/Listener/Delete/@listener.ListenerID"> Delete</a></td>
            </tr>
        }
    }

    </tbody>
</table>



<button type="button" class="btn btn-light">@Html.ActionLink("Add Listener", "New")</button>


